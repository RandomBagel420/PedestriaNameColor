{
  "schemaVersion": 1,
  "id": "namecolor",
  "version": "${version}",

  "name": "NameColor",
  "description": "Name customization",
  "authors": [],
  "contact": {},

  "license": "MIT",
  "icon": "assets/namecolor/icon.png",

  "environment": "*",
  "entrypoints": {
    "fabric-datagen": ["com.pedestriamc.namecolor.client.NameColorDataGenerator"],
    "client": ["com.pedestriamc.namecolor.client.NameColorClient"],
    "main": ["com.pedestriamc.namecolor.NameColor"]
  },

  "mixins": [
    "namecolor.mixins.json"
    ,{
      "config": "namecolor.client.mixins.json",
      "environment": "client"
    }
  ],

  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  }
}
